<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylessheet /css/Style.css?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.ScrollPane?>
<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121">
    <stylesheets><URL value="@/CSS/Style.css" /></stylesheets>
    <center>
        <ScrollPane>
            <VBox fx:id="vBox"/>
        </ScrollPane>
    </center>
    <bottom>
        <HBox>
            <TextField fx:id="messageWindow" onAction="#sendMessage" promptText="Введите сообщение ..." HBox.hgrow="ALWAYS" />
            <Button fx:id="butSend" onAction="#sendMessage" text="Send" />
        </HBox>
    </bottom>
</BorderPane>


